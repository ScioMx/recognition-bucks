<h1>Log in</h1>

<%= form_tag sessions_path do %>
	<p>
		<%= label_tag :email %>
		<%= text_field_tag :email, params[:email], :id => "fld_email_log_in" %>
	</p>
	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password, params[:password], :id => "fld_pass_log_in" %>
	</p>
	<p class="button"><%= submit_tag :id => "btn_log_in" %></p>
<% end %>