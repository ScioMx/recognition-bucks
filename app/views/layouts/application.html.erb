<!DOCTYPE html>
<html>
<head>
  <title>RecognitionBucks</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.name %>
    <%= link_to "Log out", log_out_path, :id => "lnk_log_out" %>
  <% else %>
    <%= link_to "Log in ", log_in_path, :id => "lnk_log_in" %> or 
    <%= link_to "Sign up", sign_up_path, :id => "lnk_sign_up" %>
  <% end %>

</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= yield %>

</body>
</html>
