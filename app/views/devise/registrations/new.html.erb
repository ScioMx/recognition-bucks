<h1>Sign Up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :id => "fld_devise_email" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :id => "fld_devise_password" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :id => "fld_devise_password_confirmation" %></div>

  <div><%= f.submit "Sign up", :id => "btn_devise_create_user" %></div>
<% end %>

<%= render "devise/shared/links" %>
